<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/action_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/action_list_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/action_list_button"
        android:layout_width="@dimen/default_listitem_button"
        android:layout_height="@dimen/default_listitem_button"
        android:layout_gravity="center_vertical"
        android:background="@android:drawable/ic_menu_edit"
        android:padding="@dimen/default_button_padding" />

</LinearLayout>