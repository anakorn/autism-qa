<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".AnswerQuestionActivity" >

    <TextView
        android:id="@+id/questionDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginBottom="60dp"
        android:height="150dp"
        android:layout_gravity="center_horizontal"
        android:text="Text goes here"
        android:textColor="#000000"
        android:textSize="28sp" />

    <Button
        android:id="@+id/audioButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/green_audio_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/yesButton"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00FF00"
            android:text="@string/capitalized_yes"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/textLarge" />

        <Button
            android:id="@+id/noButton"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FF0000"
            android:text="@string/capitalized_no"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/textLarge" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:indeterminate="false"
        android:maxHeight="40dp"
        android:minHeight="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:progressDrawable="@drawable/styled_progress"
        android:thumb="@drawable/zthumb" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@android:color/transparent"
        android:text="@string/back_button_text"
        android:textColor="#000000"
        android:textSize="22sp" />

    <Button
        android:id="@+id/nextButton"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/next_button_text"
        android:textColor="#000000"
        android:textSize="22sp" />

</FrameLayout>